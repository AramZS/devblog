{% extends "base.njk" %}

{% set templateName = "index" %}

{% block header %}
	<h1 class="header">
		{{site.site_name}}
	</h1>
	<h5>
		<a href="http://aramzs.github.io/aramzs/" target="_blank">By Aram Zucker-Scharff</a>
	</h5>
{% endblock %}

{% block postcontent %}
	<div class="front-container">
		<div class="column">
			<h3>Projects Thus Far</h3>
			<ul>
				{%- for project in projects %}
					<li class="capitalize-first">
						<a href="{{project.url}}">{{project.title}}</a> | <span>Days worked: {{project.count}}</span> | <span>Status: {{project.complete}}</span> <!-- last updated:  {{project.lastUpdatedPost}} -->
					</li>
				{%- endfor %}
			</ul>
		</div>
		<!-- post list: -->
		{%- for postType in postLists %}
			<div class="column">
				{% projectList postType.name,
				collections[postType.collection],
				postType.order,
				"h3", 10 %}
			</div>
		{%- endfor %}
	</div>
{% endblock %}
