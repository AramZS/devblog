{% extends "default.njk" %}

{% set templateName = "post" %}

{% block precontent %}
<section id="precontent">
    <aside id="toc-container">
        <div id="toc-container__inner">
            <h2>Contents</h2>
            {{ content | toc }}
        </div>
    </aside>
    <div id="post-description">{{ description }}</div>
</section>
{% endblock %}


{% block prefooter %}
	<div id="taglist">
		<h6>Tags: </h6>
        <ul>
			{%- for tag in tags | filterTagList -%}
			    <li><a href="{{ site.site_url }}/tag/{{ tag | slug }}">{{ tag }}</a></li>
			{%- endfor -%}
        </ul>
	</div>
{% endblock %}
