{% extends "base.njk" %}

{% block precontent %}
<section id="precontent">
	<p>
		Each project I talk about on this blog is usually executed over multiple days.
		This page is where you can find each of those posts that describe the project as I worked on it.
	</p>
</section>
{% endblock %}

{% block maincontent %}
	<p>
		<em>This project is about:</em>
	</p>
	<p>{{ description }}</p>
	<h3>Follow along with my work on {{project.projectName}}:</h3>
{% endblock %}

{% block postcontent %}
	<ul>
		{%- for post in collections.projects -%}
			{% if post.data.project == project.projectName %}
				<li>
					<a href="{{ post.url }}">{{ post.data.title }}</a>
				</li>
			{% endif %}
		{%- endfor -%}
	</ul>
{% endblock %}
